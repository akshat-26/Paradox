<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="monkey.d.luffy.paradox">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="monkey.d.luffy.paradox.ui.MainActivity" />

        <activity android:name="monkey.d.luffy.paradox.ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="monkey.d.luffy.paradox.ui.IntroActivity" />

        <activity android:name="monkey.d.luffy.paradox.ui.LoginActivity"/>

        <activity android:name="monkey.d.luffy.paradox.ui.RegisterActivity"/>
    </application>

</manifest>